<div>
  <video controls muted loop width="100%">
    <source src="<%= @video_url %>" type="video/mp4">
  </video>
</div>

<h2>Popular movies</h2>

<div class="swiper-container" data-controller="swiper" data-slides-per-view="4">
  <div class="swiper-wrapper">
    <% @popular_movies.each do |movie| %>
      <div class='swiper-slide' >
        <div class='home-movie-card'>
          <% if movie.poster_path %>
            <%= link_to movie_path(movie) do %>
              <%= image_tag "https://image.tmdb.org/t/p/w500#{movie.poster_path}" %>
            <% end %>
          <% end %>
          <h3><%= link_to movie.title, movie_path(movie) %></h3>
        </div>
      </div>
    <% end %>
  </div>

  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>


